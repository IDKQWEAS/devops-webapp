pipeline {
    agent any

    tools {
        nodejs 'NodeJS18' // harus sesuai dengan nama NodeJS yang kamu konfigurasi
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/IDKQWEAS/devops-webapp.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
